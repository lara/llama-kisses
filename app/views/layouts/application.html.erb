<!DOCTYPE html>
<html>
  <head>
    <title>LlamaKisses</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
  </head>

  <body>
    <header>
      <h1>Llama Kisses Megastore</h1>
      <% if current_user %>
        <div class="button-group">
          <%= link_to "Home", root_path, class: "button" %>
          <%= link_to "Redeem", new_redemption_path, class: "button" %>
          <%= link_to "Order History", purchases_path, class: "button" %>
          <%= link_to "Log out", logout_path, method: :delete, class: "button" %>
        </div>
      <% else %>
        <div class="button-group">
          <%= link_to "Log in with GitHub", "/auth/github", class: "button"%>
        </div>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
